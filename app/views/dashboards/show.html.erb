<div class="container-fluid-dashboard">
  <div class="row dashboard-bar justify-content-center">
    <div class="col-3 nopadding">
      <div class="dashboard-menu">
        <div class="row dashboard-top-box">
          <div class="dashboard-avatar-change"><%= image_tag('change-1.png', :onclick => "sweet()")%></div>
          <script>
            function sweet() {
                swal({
                title: '<i>HTML</i> <u>example</u>',
                type: 'info',
                html:
                  'You can use <b>bold text</b>, ' +
                  '<a href="//github.com">links</a> ' +
                  'and other HTML tags',
                showCloseButton: true,
                showCancelButton: true,
                focusConfirm: false,
                confirmButtonText:
                  '<i class="fa fa-thumbs-up"></i> Great!',
                confirmButtonAriaLabel: 'Thumbs up, great!',
                cancelButtonText:
                '<i class="fa fa-thumbs-down"></i>',
                cancelButtonAriaLabel: 'Thumbs down',
              });
            }
          </script>
          <%= cl_image_tag(@user.image, :width => 110, :height => 110,
             :crop => :thumb, :gravity => :face, :radius => :max) %>
            <span class="vert-helper"></span>
            <div class="dashboard-top-box-text">
              <%= @user.first_name %> <%= @user.last_name %><br /><br />
              <ul>
                <li class="row"><i class="fa fa-building fa-2" aria-hidden="true"></i><%= @user.city %></li>
                <li class="row"><i class="fa fa-map-marker fa-2" aria-hidden="true"></i><%= @user.state %></li>
              </ul>
            </div>
          </div>
        <ul class="dashboard-menu-items">
          <li class="row dashboard-menu-items"><i class="fa fa-tachometer fa-3" aria-hidden="true"></i>Dashboard</li>
          <li class="row dashboard-menu-items"><i class="fa fa-users fa-3" aria-hidden="true"></i>Manage Team Members</li>
          <li class="row dashboard-menu-items"><i class="fa fa-cogs fa-3" aria-hidden="true"></i>Account Settings</li>
          <%= link_to new_job_path do %>
          <li class="row dashboard-menu-items-bold justify-content-center">
            <i class="fa fa-plus fa-3" aria-hidden="true"></i>
            Start Job Posting
          </li>
          <% end %>
        </ul>
      </div>
      <div class="jobposting-divider">&nbsp;</div>
    </div>

    <div class="col-9 nopadding">
      <div>
        <div class="dashboard-title">
          Open Job Postings
        </div>

        <% @jobs.each do |job| %>
          <div class="row nomargin dashboard-edit-icons">
            <div class="col-3 dashboard-top vert-align">
              <div><%= image_tag('collaborators.gif') %></div>
            </div>
            <div class="col-4 dashboard-sidebar vert-align">
              <div class = "row">
                <%= link_to job.job_title, job_path(job) %>
              </div>
              <div class="row">
                Unread Applications? 99
              </div>
            </div>
            <div class="col-3">
              <span class="vert-helper"></span>
              <%= link_to job_path(job), method: :delete, data: {confirm: 'Are you sure you want to delete this?'} do %>
                <i class="fa fa-trash-o" aria-hidden="true"></i>&nbsp
              <% end %>
              <%= link_to edit_job_path(job) do %>
                <i class="fa fa-pencil" aria-hidden="true"></i>&nbsp
              <% end %>
                <i class="fa fa-pause" aria-hidden="true"></i>
            </div>
            <div class="col-1 vert-align">
              Time remaining?
            </div>
          </div>
          <div class="dashboard-divider">&nbsp;</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
