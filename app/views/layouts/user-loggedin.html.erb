<!DOCTYPE html>
<html>
  <head>
    <title>Product</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <nav class="navbar navbar-toggleable-md">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to root_path do %>
        <%= image_tag "logo-new.png", class: "img-responsive" %>
      <% end %>
      <div>
        <input type="text" name="search" placeholder="Search for people, jobs, companies, and more..." class="top-search-bar">
      </div>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Studio', studio_users_path, class: 'nav-link' %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'My Profile', user_path(current_user), class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
            <% end %>
          </ul>
          <%= link_to root_path do %>
            <%= image_tag "notification-bell", class: "nav-image" %>
          <% end %>
          <%= link_to root_path do %>
            <%= image_tag "avatar.png", class: "nav-image" %>
          <% end %>
        </div>
    </nav>

    <%= yield %>


    <footer class="footer-private-view">
      <div class="container-fluid">
        <div class="row row-footer-private">

          <div class="footer-logo-box col-2 offset-1">
            <%= link_to root_path do %>
              <%= image_tag "logo-new.png", class: "img-responsive" %>
            <% end %>
            <br /><br />
            Â© 2017 JobReel, Inc.<br />
            All rights reserved.
          </div>

          <div class="verticalLine "></div>

          <div class="list-footer-left col-2">
            <nav>
              <ul style="list-style-type: none">
                <li><a href="#">Dashboard</a>
                </li>
                <li><a href="#">Explore</a>
                </li>
                <li><a href="#">My Network</a>
                </li>
                <li><a href="#">My Jobs</a>
                </li>
                <li><a href="#">Support</a>
                </li>
              </ul>
            </nav>
          </div>

          <div class="list-footer-middle col-2">
            <nav>
              <ul style="list-style-type: none">
                <li><a href="#">About</a>
                </li>
                <li><a href="#">Contact</a>
                </li>
                <li><a href="#">Terms of Service</a>
                </li>
                <li><a href="#">Privacy Policy</a>
                </li>
              </ul>
            </nav>
          </div>

          <div class="verticalLine"></div>

          <div class="social-footer col-2">
            <h1>Follow Us</h1>
            <div class="row social-footer-list">
              <%= image_tag 'facebook-footer-icon.png' %><h3>&nbsp&nbsp&nbsp<a href="#">Facebook</a></h3>
            </div>
            <div class="row social-footer-list">
              <%= image_tag 'twitter-footer-icon.png' %><h3>&nbsp&nbsp&nbsp<a href="#">Twitter</a></h3>
            </div>
            <div class="row social-footer-list">
              <%= image_tag 'rss-icon.png' %><h3>&nbsp&nbsp&nbsp<a href="#">RSS</a></h3>
            </div>
          </div>

          <div class="verticalLine"></div>

          <div class="newsletter-footer col-3">
            <h1>Subscribe To Our News</h1>
            <div class="row newsletter-bar-footer ">
              <input type="text" name="search" placeholder="Enter Your Email" class="newsletter-bar">
              <%= image_tag 'mail-footer-icon-green.png' %>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
