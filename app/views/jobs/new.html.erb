<div class="booyah-box col-10 offset-1">
  <h1>Enter New Job Posting Information</h1>
  <%= simple_form_for @job do |f| %>
    <%= f.input :job_title %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :job_description %>
    <br />
    <%= f.input :requirements, collection: ["Technical Skills", "Creative Problem Solving", "Trust Building", "Leadership", "Cultural Sensitivity"], label: "Job Requirements", input_html: { multiple: true } %>
    <br />
    <!-- This button should also create a new jobreel -->
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>
