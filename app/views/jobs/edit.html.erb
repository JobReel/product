<div class="booyah-box col-10 offset-1">
  <h1>Edit This Job Posting Information</h1>
  <%= simple_form_for @job do |f| %>
    <%= f.input :job_title %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :job_description %>
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
</div>
